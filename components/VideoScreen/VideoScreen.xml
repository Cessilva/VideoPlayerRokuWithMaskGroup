<?xml version="1.0" encoding="utf-8" ?> 
<component name="VideoScreen" extends="Group" initialFocus="Buttons">
    <interface>
        <field id="videoControl" type="string" alwaysnotify="true" alias="VideoPlayer.control" onChange="muestraControl"/>
        <field id="recorrido" type="integer"  alias="VideoPlayer.position" onChange="recorreReloj"/>
        <field id="tiempoTotal" type="integer" alias="VideoPlayer.duration" onChange="asignaDuration"/>
        <field id="skip10Seconds" type="boolean" onChange="skip10Seconds" alwaysnotify="true"/>
    </interface>
    <script type="text/brightscript" uri="pkg:/components/VideoScreen/VideoScreen.brs" />
    <children>
        <Video
            id="VideoPlayer"
            translation="[0,0]"
            width="1280"
            height="720"
            />
		    <Rectangle id="control">
        <Group  >
		<!-- color = "0x123526FF" verde -->
			<Rectangle
				id = "PlayBar"
				height = "150"
				width = "1280"
				color = "0x000000"
				opacity = ".8"
				translation = "[0,550]">
				<Poster
					id="testPoster"
					width="200.0"
					height="150.0" />
			<!-- Raya roja color = "0xff0000"-->
				<Rectangle
					id = "TimeBarBack"
					height = "10"
					width = "1000"
					color = "0xc2c2c2">
					<!-- Punto amarillo color = "0xffff00" -->
					<Rectangle
						id = "TimeBarFront"
						height = "10"
						width = "10"
						color = "0x0096d2">				
					</Rectangle>
				</Rectangle>
				<!-- Inicio Duration -->
				<Label
					id = "AudioCurrent"
					color = "0xFFFFFFFF"
					width = "100"
					height = "10"> 
					<Font
					role = "font"
					uri = "pkg:/fonts/avenirltstd-light-webfont.ttf"
					id = "avenir-light"
					size = "23"/>
				</Label>
				<!--Fin Duration -->
				<Label
					id = "AudioDuration"
					color = "0xFFFFFFFF"
					width = "100"
					height = "10">
					<Font
					role = "font"
					uri = "pkg:/fonts/avenirltstd-light-webfont.ttf"
					id = "avenir-light"
					size = "23"/>
				</Label>
			<Rectangle id="RectangleControls">
			<!-- Simbolo de retroceso -->
				<Label
					id = "FF"
					color = "0xFFFFFFFF"
					width = "100"
					height = "120"
					text = "T">
					<Font
						id = "Sosa-Regular"
						role = "font"
						uri = "pkg:/fonts/sosa-regular-webfont.ttf"
						size = "60"/>
				</Label>
				<!-- Simbolo de play -->
				<Label
					id = "Play"
					color = "0xFFFFFFFF"
					width = "100"
					height = "120"
					text = "N"
					translation="[100,0]">
					<Font
						id = "Sosa-Regular"
						role = "font"
						uri = "pkg:/fonts/sosa-regular-webfont.ttf"
						size = "55"/>
				</Label>
				<!-- Simbolo de adelanto -->
				<Label
					id = "Rewind"
					color = "0xFFFFFFFF"
					width = "100"
					height = "120"
					text = "S"
					translation="[200,0]">
					<Font
						id = "Sosa-Regular"
						role = "font"
						uri = "pkg:/fonts/sosa-regular-webfont.ttf"
						size = "60"/>
				</Label>
				</Rectangle>
			</Rectangle>
		</Group>
		
		<Animation
			id = "RewindAnim"
			repeat = "false"
			easeFunction = "linear"
			duration = ".1">
			<ColorFieldInterpolator
				id = "ColorInterp"
				key = "[0.0,0.5,1.0]"
				keyValue = "[0xFFFFFFFF, 0x000000FF, 0xFFFFFFFF]"
				fieldToInterp = "FF.color"/>
		</Animation>
		<Animation
			id = "FFAnim"
			repeat = "false"
			easeFunction = "linear"
			duration = ".1">
			<ColorFieldInterpolator
				id = "ColorInterp"
				key = "[0.0,0.5,1.0]"
				keyValue = "[0xFFFFFFFF, 0x000000FF, 0xFFFFFFFF]"
				fieldToInterp = "Rewind.color"/>
		</Animation>
		<Animation
			id = "TimerAnim"
			repeat = "false"
			control="start"
			easeFunction = "linear">
			<Vector2DFieldInterpolator id="myInterp2"
			key="[0.0, 1.0]"
			keyvalue="[[0,0],[1000,0]]"
			fieldToInterp="TimeBarFront.translation" />
		</Animation>
    </Rectangle>
    </children> 
</component>